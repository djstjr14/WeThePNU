<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchor="@id/agenda_listview"
        app:layout_anchorGravity="bottom|right"
        android:src="@drawable/add"/>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <ListView
            android:id="@+id/agenda_listview"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:choiceMode="singleChoice"
            android:divider="#EAEAEA"
            android:dividerHeight="1.5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/recommend_btn"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@android:color/holo_blue_dark"
                android:onClick="recommendClick"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/new_btn"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:onClick="newClick"
                android:background="@android:color/holo_blue_dark"
                />

            <ImageButton
                android:id="@+id/field_btn"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:onClick="fieldClick"
                android:background="@android:color/holo_blue_dark"
                />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:id="@+id/field_layout"
                android:visibility="invisible">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_black"
                    android:text="전체"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_black"
                    android:text="행정"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_black"
                    android:text="복지"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_black"
                    android:text="인권"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_black"
                    android:text="시설"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_black"
                    android:text="문화"
                    android:textSize="17dp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/notosans_black"
                    android:text="기타"
                    android:textSize="17dp"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>




</android.support.design.widget.CoordinatorLayout>
