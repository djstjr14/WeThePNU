<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/clickedFlag"
        android:layout_width="3dp"
        android:layout_marginLeft="10dp"
        android:layout_height="55dp"
        android:background="#98C1D6">
    </RelativeLayout>
'
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/agenda_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center_vertical|left"
            android:text="23개월 아기가 폭행에 장이 끊어져 123"
            android:textColor="#000000"
            android:textSize="15.2sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/agenda_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:text="18.07.22 ~ 18.08.21"
                android:textColor="#B5B5B5"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/agenda_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center_vertical|right"
                android:text="379,300 명"
                android:textColor="#FF809E"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
