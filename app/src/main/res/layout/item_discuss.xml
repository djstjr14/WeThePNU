<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/clickedFlag_discuss"
        android:layout_width="3dp"
        android:layout_marginLeft="10dp"
        android:layout_height="55dp"
        android:background="#98C1D6"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discuss_title"
            android:layout_width="260dp"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center_vertical|left"
            android:text="23개월 아기가 폭행에 장이 끊어져 123pajspdfijpi"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="15.2sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/discuss_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:text="2018-07-22"
                    android:textColor="#B5B5B5"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:layout_marginLeft="5dp"
                    android:text="|"
                    android:textColor="#B5B5B5"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="조회수 : "
                    android:textColor="#B5B5B5"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/hits_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:text="0"
                    android:textColor="#B5B5B5"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:layout_marginLeft="5dp"
                    android:text="|"
                    android:textColor="#B5B5B5"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/notosans_bold"
                    android:text="추천수 : "
                    android:textColor="#B5B5B5"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/recommends_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:text="0"
                    android:textColor="#B5B5B5"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/ic_comment_box">
        <TextView
            android:id="@+id/discuss_comments"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:paddingTop="3dp"
            android:paddingLeft="5dp"
            android:fontFamily="@font/notosans_bold"
            android:text="100"
            android:textColor="#FF809E"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
